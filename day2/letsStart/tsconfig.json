//* https://www.staging-typescript.org/tsconfig

{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "esModuleInterop": true // ES6 모듈 사양을 준수하여 CommonJS 모듈을 가져올 수 있도록 한다.
  },
  "include": ["src/**/*"] // 컴파일할 경로
}
